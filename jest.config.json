{
  "moduleNameMapper": {
    "^@configs/(.*)$": "<rootDir>/src/configs/$1",
    "^@modules/(.*)$": "<rootDir>/src/modules/$1",
    "^@setup/(.*)$": "<rootDir>/src/setup/$1",
    "^@src/(.*)$": "<rootDir>/src/$1",
    "^@tests/(.*)$": "<rootDir>/tests/$1"
  },
  "preset": "ts-jest",
  "roots": [
    "<rootDir>/tests"
  ],
  "setupFilesAfterEnv": [
    "<rootDir>/setup-jest.ts"
  ],
  "testEnvironment": "node",
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  }
}
