  "packageManager": "pnpm@8.9.0",
  "engines": {
    "node": "20.x",
    "pnpm": "8.x"
  },
  "scripts": {
    "build": "tsc --project tsconfig.json && tsc-alias --project tsconfig.json",
    "start": "node dist/index.js",
    "dev": "nodemon src/index.ts",
    "lint": "eslint src --ext .ts",
    "migrate:generate": "drizzle-kit generate:sqlite --config=src/configs/drizzle.ts",		
    "migrate:push": "drizzle-kit push:sqlite --config=src/configs/drizzle.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "@fastify/autoload": "5.8.0",
    "@fastify/swagger": "8.14.0",
    "@fastify/swagger-ui": "2.1.0",
    "@fastify/type-provider-json-schema-to-ts": "3.0.0",
    "bcrypt": "5.1.1",
    "better-sqlite3": "9.4.0",
    "dotenv": "16.4.1",
    "drizzle-orm": "0.29.3",
    "fastify": "4.26.0",
    "fastify-plugin": "4.5.1",
    "json-schema-to-ts": "3.0.0",
    "jsonwebtoken": "9.0.2"
  },
  "devDependencies": {
    "@types/bcrypt": "5.0.2",
    "@types/better-sqlite3": "7.6.9",
    "@types/jsonwebtoken": "9.0.5",
    "@types/node": "20.11.13",
    "@typescript-eslint/eslint-plugin": "6.20.0",
    "drizzle-kit": "0.20.14",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-destructuring": "2.2.1",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-prefer-arrow": "1.2.3",
    "eslint-plugin-prettier": "5.1.3",
    "nodemon": "3.0.3",
    "prettier": "3.2.4",
    "ts-node": "10.9.2",
    "tsc-alias": "1.8.8",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.3.3"
  }
}
