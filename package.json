{
  "name": "nodejs-backend-skeleton",
  "version": "1.0.0",
  "packageManager": "pnpm@9.15.2",
  "description": "Node.js backend skeleton",
  "author": {
    "name": "Ren√© Kulik",
    "email": "rene@kulik.io",
    "url": "https://www.kulik.io/"
  },
  "license": "MIT",
  "keywords": [
    "nodejs",
    "api"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.json && tsc-alias --project tsconfig.json",
    "start": "node dist/index.js",
    "dev": "nodemon src/index.ts",
    "lint": "eslint src -c eslint.config.js",
    "migrate:generate": "drizzle-kit generate:sqlite --config=src/configs/drizzle.ts",
    "migrate:push": "drizzle-kit push:sqlite --config=src/configs/drizzle.ts",
    "test": "NODE_ENV=testing jest",
    "prepare": "husky",
    "commitlint": "commitlint --edit"
  },
  "dependencies": {
    "@fastify/autoload": "^6.0.3",
    "@fastify/swagger": "^9.4.0",
    "@fastify/swagger-ui": "^5.2.0",
    "@fastify/type-provider-json-schema-to-ts": "^5.0.0",
    "bcrypt": "^5.1.1",
    "better-sqlite3": "^11.7.0",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.29.3",
    "fastify": "^5.2.0",
    "fastify-plugin": "^5.0.1",
    "json-schema-to-ts": "^3.1.1",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@rkulik/eslint-config": "^1.3.0",
    "@rkulik/prettier-config": "^1.1.0",
    "@types/bcrypt": "^5.0.2",
    "@types/better-sqlite3": "^7.6.12",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.2",
    "@types/supertest": "^6.0.2",
    "drizzle-kit": "^0.20.14",
    "eslint": "^9.17.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.4.2",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.2"
  },
  "prettier": "@rkulik/prettier-config"
}
